@model IEnumerable<GearNet.Entities.Device>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeviceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RackRow)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RackCol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCheckedOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Case.CaseId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.StudentId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeviceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RackRow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RackCol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCheckedOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Case.CaseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DeviceId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DeviceId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DeviceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
